<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Thickness x:Key="ParagraphOffset">55,20,10,0</Thickness>
	<Thickness x:Key="TableInnerOffset">15,10,10,10</Thickness>
	<Style x:Key="PlainText" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
		<Setter Property="Margin" Value="{StaticResource ParagraphOffset}" />
	</Style>
	<Style x:Key="BoldText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
		<Setter Property="Margin" Value="{StaticResource ParagraphOffset}" />
	</Style>
	<Style x:Key="TablePlainText" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
		<Setter Property="Margin" Value="{StaticResource TableInnerOffset}" />
	</Style>
	<Style x:Key="Header2Text" TargetType="TextBlock" BasedOn="{StaticResource PlainText}">
		<Setter Property="FontSize" Value="24" />
	</Style>
	<Style x:Key="TableHeader" TargetType="TextBlock" BasedOn="{StaticResource TablePlainText}">
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="HorizontalAlignment" Value="Center" />
	</Style>
</ResourceDictionary>
