<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
			<Title>Source Generator Debugging Code Snippet</Title>
			<Shortcut>sgdbg</Shortcut>
			<Description>The snippet that allows you creating the debugging code snippet that inserted into the initialization context.</Description>
		</Header>
		<Snippet>
			<Code Language="csharp" Delimiter="$">
				<![CDATA[#if DEBUG
		if (!System.Diagnostics.Debugger.IsAttached)
		{
			System.Diagnostics.Debugger.Launch();
		}
#endif$end$]]></Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>